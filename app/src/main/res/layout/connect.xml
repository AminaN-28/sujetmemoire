<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.Connect"
    android:background="@color/white">

    <TextView
        android:id="@+id/topText"
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:layout_marginTop="40dp"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="Welcome Back My dear To Blood Line App.\nCan I have your number?"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />


    <RelativeLayout
        android:layout_width="353dp"
        android:layout_height="231dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="197dp"
        android:padding="10dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@id/fullname"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_backgroung"
            android:gravity="center"
            android:hint="Enter Your Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/userpassword"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@id/password"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_backgroung"
            android:gravity="center"
            android:hint="Enter Your name"
            android:inputType="text" />

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:text="Password" />

        <TextView
            android:id="@+id/fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="4dp"
            android:text="Full Name" />

    </RelativeLayout>

    <TextView
        android:id="@+id/logindirct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="100dp"
        android:text="Not registered? Register now"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonconnect"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="31dp"
        android:background="@drawable/button_background"
        android:text="Login Now"
        android:layout_centerInParent="true"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp" />


</RelativeLayout>